{
    "name": "mexancode/apollo-php",
    "description": "Mini-framework para APIs inspirado en Django REST Framework",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Ricardo Mex",
            "email": "ricardo.mexan@hotmail.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "vlucas/phpdotenv": "^5.6",
        "psr/container": "^2.0",
        "psr/http-message": "^1.0",
        "psr/http-server-handler": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Apollo\\Core\\": "core/",
            "Apps\\": "apps/"
        },
        "files": [
            "core/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"if (file_exists('core/Support/helpers.php')) { require 'core/Support/helpers.php'; }\""
        ],
        "post-create-project-cmd": [
            "@php -r \"copy('.env.example', '.env');\"",
            "@php -r \"file_exists('public/index.php') || mkdir('public', 0755, true);\"",
            "@php core/Console/Commands/InstallCommand.php"
        ],
        "test": "phpunit",
        "start": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform-check": false
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}